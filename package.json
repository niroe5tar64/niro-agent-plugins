{
  "name": "claude-code-plugins",
  "version": "0.1.0",
  "private": true,
  "description": "業務効率化のためのClaude Codeプラグイン群",
  "scripts": {
    "build": "bun run build:tsc && bun run build:plugins",
    "build:tsc": "tsc --build",
    "build:plugins": "bun run build:decision-support",
    "build:decision-support": "bun run decision-support/scripts/build.ts",
    "test": "bun test",
    "clean": "rm -rf dist/ *.tsbuildinfo",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "validate": "bun run typecheck && bun run check"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
